{{#if isEditing}}
  {{edit-todo class='edit' value=todo.title
                           focus-out=(action 'save' todo)
                           insert-newline=(action 'save' todo)}}
{{else}}
  <input type='checkbox' checked={{todo.isCompleted}} class='toggle' onchange={{action 'toggleCompleteTodo' todo}}>
  <label {{action 'editTodo' on='doubleClick'}}>{{todo.title}}</label>
  {{!-- <div class="comments"><span>{{comments}} comments</span></div> --}}
<button {{action 'removeTodo' todo}} class='destroy'></button>
{{/if}}
<ul>
{{#each todo.children as |child|}}
  {{todo-item todo=child}}
{{/each}}
</ul>